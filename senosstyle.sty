% Quadrado de Halmos Preto
\renewcommand{\qedsymbol}{$\blacksquare$}

% Tipos de "teorema", todos sob a mesma enumeracao, enumerados por
% Secao


\theoremstyle{plain}%For Theorem, Lemma, Corollary, Proposition,
                    %Conjecture,Criterion, Algorithm

\newtheorem{theorem}{Teorema}[section]
\newtheorem{lemma}[theorem]{Lema}
\newtheorem{proposition}[theorem]{Proposição}
\newtheorem{corollary}[theorem]{Corolário}


\theoremstyle{definition} % For Definition, Condition, Problem,
                          % Example

\newtheorem{definition}[theorem]{Definição}
\newtheorem{example}[theorem]{Exemplo}


\theoremstyle{remark}% For Remark, Note, Notation, Claim, Summary,
                     % Acknowledgment, Case, Conclusion

\newtheorem{remark}[theorem]{Nota}
\newtheorem{notation}[theorem]{Notação}

